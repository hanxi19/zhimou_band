<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhimou.zhimou_service.mapper.VolunteerPlatformMapper">
    <select id="getPoint" resultType="Integer">
        select point from point_table where id=1
    </select>

    <update id="addPoint">
        update point_table set point=#{point} where id=1
    </update>

    <insert id="insertPoint">
        insert into point_table (point) values (0)
    </insert>
</mapper>