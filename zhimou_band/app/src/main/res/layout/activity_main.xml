<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@mipmap/main_backgeround"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/main_page_bt"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:background="@drawable/main_page"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/help_seek_bt"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:background="@drawable/helpseek"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/mine_bt"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/mine"
            android:layout_alignParentRight="true" />

    </RelativeLayout>


</LinearLayout>